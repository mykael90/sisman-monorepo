// packages/types/tsconfig.build.json
{
  "extends": "./tsconfig.json", // Herda configurações base
  "compilerOptions": {
    "outDir": "./dist", // Pasta de saída para os arquivos compilados
    "rootDir": "./src", // Diretório raiz dos fontes
    "noEmit": false,    // Precisamos que ele emita os arquivos (ao contrário do tsconfig.json base)
    
    // Essencial para gerar os arquivos de tipo
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  // Inclui apenas o diretório 'src' no build
  "include": ["src/**/*"],
  // Exclui arquivos que não devem ir para a build final
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}