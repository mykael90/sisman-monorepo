{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "shared/notifications/email/templates/**/*",
        "outDir": "dist"
      },
      {
        "include": "**/*.json",
        "outDir": "dist"
      }
    ]
  }
}
